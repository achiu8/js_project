<section class="container">
    <div class="content">
        <h2>List of current surveys</h2>
        <ul>
            <%@surveys.each do |survey| %>
                <li>
                    <a href="/surveys/<%=survey.id%>">
                        <%=survey.title%>
                    </a>
                </li>
            <%end %>
        </ul>
    </div>
</section>